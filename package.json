{
  "name": "dice-chance",
  "version": "2.0.3",
  "description": "Dice rolling and analysis library.",
  "main": "index.js",
  "scripts": {
    "test": "jest src",
    "build": "babel src -d lib --ignore '**/__tests__/**' && flow-copy-source -v -i '**/__tests__/**' src lib",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanzhaime/dice-chance.git"
  },
  "keywords": [
    "dice",
    "random",
    "analysis"
  ],
  "author": "catchen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shanzhaime/dice-chance/issues"
  },
  "homepage": "https://github.com/shanzhaime/dice-chance#readme",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "flowtype"
    ],
    "rules": {}
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "codecov": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "flow-bin": "^0.130.0",
    "flow-copy-source": "^2.0.8",
    "flow-remove-types": "^2.99.0",
    "husky": "^4.0.0",
    "jest": "^26.0.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.0"
  }
}
